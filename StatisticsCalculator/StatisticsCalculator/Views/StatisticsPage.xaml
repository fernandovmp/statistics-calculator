<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:StatisticsCalculator.ViewModels"
             mc:Ignorable="d"
             x:Class="StatisticsCalculator.Views.StatisticsPage"
             Title="Estatística">
    <ContentPage.Resources>
        <viewModels:StatisticsViewModel x:Key="StatisticsVM"/>
        <Style Class="ResultFrame" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="#eee"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="HasShadow" Value="False"/>
            <Setter Property="HeightRequest" Value="45"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="Margin" Value="30, 0, 30, 0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        </Style>
        <Style Class="ResultStyle" TargetType="Label">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        </Style>
        <Style Class="CalculatorButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout BindingContext="{StaticResource StatisticsVM}">
            <Frame class="ResultFrame">
                <Label Text="{Binding Result}"
                       class="ResultStyle"/>
            </Frame>
            <Grid HorizontalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Button Text="Moda" class="CalculatorButton"
                        Grid.Row="0" Grid.Column="0"
                        Command="{Binding ModeCommand}"/>
                <Button Text="Mediana" class="CalculatorButton"
                        Grid.Row="0" Grid.Column="1"
                        Command="{Binding MedianCommand}"/>
                <Button Text="Media" class="CalculatorButton"
                        Grid.Row="0" Grid.Column="2"
                        Command="{Binding MeanCommand}"/>
                <Button Text="Σx^2" class="CalculatorButton"
                        Grid.Row="1" Grid.Column="0"
                        Command="{Binding SumOfSquareCommand}"/>
                <Button Text="Σx" class="CalculatorButton"
                        Grid.Row="1" Grid.Column="1"
                        Command="{Binding SumCommand}"/>
                <Button Text="σ" class="CalculatorButton"
                        Grid.Row="1" Grid.Column="2"
                        Command="{Binding PopulationStandardDeviationCommand}"/>
                <Button Text="σ^2" class="CalculatorButton"
                        Grid.Row="2" Grid.Column="2"
                        Command="{Binding PopulationVarianceCommand}"/>
                <Button Text="s" class="CalculatorButton"
                        Grid.Row="2" Grid.Column="0"
                        Command="{Binding SampleStandardDeviationCommand}"/>
                <Button Text="s^2" class="CalculatorButton"
                        Grid.Row="2" Grid.Column="1"
                        Command="{Binding SampleVarianceCommand}"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
