<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:StatisticsCalculator.ViewModels"
             xmlns:translator="clr-namespace:StatisticsCalculator.Translation"
             mc:Ignorable="d"
             x:Class="StatisticsCalculator.Views.StatisticsPage"
             Title="{translator:Translate StatisticsTabLabel}">
    <ContentPage.Resources>
        <viewModels:StatisticsViewModel x:Key="StatisticsVM"/>
        <Style Class="ResultLabel" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="VerticalOptions" Value="EndAndExpand"/>
        </Style>
        <Style Class="ResultFrame" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="#eee"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="HasShadow" Value="False"/>
            <Setter Property="HeightRequest" Value="45"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="Margin" Value="30, 0, 30, 0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
        <Style Class="ResultStyle" TargetType="Label">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        </Style>
        <Style Class="CalculatorButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout BindingContext="{StaticResource StatisticsVM}">
            <StackLayout VerticalOptions="CenterAndExpand">
                <Label Text="{Binding ResultLabel}" class="ResultLabel"/>
                <Frame class="ResultFrame">
                    <Label Text="{Binding Result}"
                           class="ResultStyle"/>
                </Frame>
            </StackLayout>
            <Grid HorizontalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Button Text="{translator:Translate ModeLabel}" 
                        class="CalculatorButton"
                        Grid.Row="0" Grid.Column="0"
                        Command="{Binding ModeCommand}"
                        CommandParameter="{translator:Translate ModeLabel}"/>
                <Button Text="{translator:Translate MedianLabel}" 
                        class="CalculatorButton"
                        Grid.Row="0" Grid.Column="1"
                        Command="{Binding MedianCommand}"
                        CommandParameter="{translator:Translate MedianLabel}"/>
                <Button Text="{translator:Translate MeanLabel}" 
                        class="CalculatorButton"
                        Grid.Row="0" Grid.Column="2"
                        Command="{Binding MeanCommand}"
                        CommandParameter="{translator:Translate MeanLabel}"/>
                <Button Text="Σx" class="CalculatorButton"
                        Grid.Row="1" Grid.Column="0"
                        Command="{Binding SumCommand}"
                        CommandParameter="{translator:Translate SumOfItemsLabel}"/>
                <Button Text="Σx^2" class="CalculatorButton"
                        Grid.Row="1" Grid.Column="1"
                        Command="{Binding SumOfSquareCommand}"
                        CommandParameter="{translator:Translate SumOfSquareLabel}"/>
                <Button Text="σ" class="CalculatorButton"
                        Grid.Row="1" Grid.Column="2"
                        Command="{Binding PopulationStandardDeviationCommand}"
                        CommandParameter="{translator:Translate PopulationStandardDeviationLabel}"/>
                <Button Text="σ^2" class="CalculatorButton"
                        Grid.Row="2" Grid.Column="2"
                        Command="{Binding PopulationVarianceCommand}"
                        CommandParameter="{translator:Translate PopulationVarianceLabel}"/>
                <Button Text="s" class="CalculatorButton"
                        Grid.Row="2" Grid.Column="0"
                        Command="{Binding SampleStandardDeviationCommand}"
                        CommandParameter="{translator:Translate SampleStandardDeviationLabel}"/>
                <Button Text="s^2" class="CalculatorButton"
                        Grid.Row="2" Grid.Column="1"
                        Command="{Binding SampleVarianceCommand}"
                        CommandParameter="{translator:Translate SampleVarianceLabel}"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
